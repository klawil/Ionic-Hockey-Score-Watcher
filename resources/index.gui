<svg>
  <svg id="loading" width="100%" height="100%">
    <text width="100%" height="40" font-size="30" x="50%" y="50%-50" text-anchor="middle" fill="white">Loading...</text>

    <svg id="puck" width="30" height="20" x="50%-15" y="50%-10">
      <animate attributeName="x" begin="load" from="30" to="288" dur="3" repeatDur="6" final="keep" repeatCount="indefinite" />
      <animate attributeName="x" begin="load+3" from="288" to="30" dur="3" repeatDur="6" final="keep" repeatCount="indefinite" />

      <arc x="0" y="5" width="30" height="10" arc-width="1" start-angle="0" sweep-angle="360" fill="white" />
      <rect x="0" y="10" width="2" height="10" fill="white" />
      <rect x="29" y="10" width="2" height="10" fill="white" />
      <arc x="0" y="15" width="30" height="10" arc-width="1" start-angle="90" sweep-angle="180" fill="white" />
    </svg>
  </svg>

  <svg id="no-games" width="100%" height="100%">
    <text width="100%" height="40" font-size="30" x="50%" y="50%-50" text-anchor="middle" fill="white">No Games For This Date</text>

    <use href="#navigation" x="0" y="0">
      <set href="#updated" attributeName="display" to="none" />
      <set href="#bar" attributeName="display" to="none" />
      <set href="#bar-fill" attributeName="display" to="none" />
    </use>
  </svg>

  <use id="game-list" href="#tile-list" height="100%">
    <var id="reorder-enabled" value="0" />

    <!-- A buffer item -->
    <use href="#tile-list-item" height="50" fill="black" />

    <!-- The games -->
    <use id="game-0" href="#game" />
    <use id="game-1" href="#game" />
    <use id="game-2" href="#game" />
    <use id="game-3" href="#game" />
    <use id="game-4" href="#game" />
    <use id="game-5" href="#game" />
    <use id="game-6" href="#game" />
    <use id="game-7" href="#game" />
    <use id="game-8" href="#game" />
    <use id="game-9" href="#game" />
    <use id="game-10" href="#game" />
    <use id="game-11" href="#game" />
    <use id="game-12" href="#game" />
    <use id="game-13" href="#game" />
    <use id="game-14" href="#game" />

    <use href="#navigation" x="0" y="0">
      <set href="#updated" attributeName="text-buffer" to="Updated" />
    </use>
  </use>

  <use id="game-events" href="#tile-list" height="100%">
    <var id="reorder-enabled" value="0" />

    <!-- A buffer item -->
    <use href="#tile-list-item" height="50" fill="black" />

    <use id="game-event-0" href="#game-event" />
    <use id="game-event-1" href="#game-event" />
    <use id="game-event-2" href="#game-event" />
    <use id="game-event-3" href="#game-event" />
    <use id="game-event-4" href="#game-event" />
    <use id="game-event-5" href="#game-event" />
    <use id="game-event-6" href="#game-event" />
    <use id="game-event-7" href="#game-event" />
    <use id="game-event-8" href="#game-event" />
    <use id="game-event-9" href="#game-event" />
    <use id="game-event-10" href="#game-event" />
    <use id="game-event-11" href="#game-event" />
    <use id="game-event-12" href="#game-event" />
    <use id="game-event-13" href="#game-event" />
    <use id="game-event-14" href="#game-event" />

    <use href="#navigation" x="0" y="0">
      <set href="#updated" attributeName="display" to="none" />
      <set href="#bar" attributeName="display" to="none" />
      <set href="#bar-fill" attributeName="display" to="none" />
      <set href="#previous" attributeName="display" to="none" />
      <set href="#next" attributeName="display" to="none" />
    </use>
  </use>
</svg>
